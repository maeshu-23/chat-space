.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__username
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__edit-user
          = link_to new_group_path, class:"side-header__box__edit-user__icon" do
            = icon('far', 'edit')
        %li.side-header__box__new-group
          = link_to edit_user_path(current_user), class:"side-header__box__new-group__icon" do
            = icon('fas', 'cog')

  .side-bar
    - current_user.groups.each do |group|
      .side-bar__group-list
        = link_to group_messages_path(group) do
          %p.group__name
            = group.name
          %p.group__message
            = group.show_last_message

