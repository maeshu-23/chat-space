.main-chat__box__info
  = message.user.name
  .main-chat__box__info__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-chat__box__message
  - if message.content.present?
    %p.main-chat__box__message__content
      = message.content
  = image_tag message.image.url, class: 'main-chat__box__message__image' if message.image.present?